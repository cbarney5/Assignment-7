@model Book
<div class="card card-outline-primary m-1 p-1 text-center" style="width: 40rem;">
    <div class="bg-faded p-1">
        <h4>Book Title: @Model.Title</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Author First Name: @Model.AuthorFirstName</li>
            <li class="list-group-item">Author Last Name: @Model.AuthorLastName</li>
            <li class="list-group-item">Publisher: @Model.Publisher</li>
            <li class="list-group-item">ISBN: @Model.ISBN</li>
            <li class="list-group-item">Classification: @Model.Classification</li>
            <li class="list-group-item">Category: @Model.Category</li>
            <li class="list-group-item">Price: $@Model.Price</li>
            <li class="list-group-item">Pages: @Model.PageNum</li>
        </ul>
    </div>
</div>